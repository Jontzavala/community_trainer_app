<div class="text-center"><h1>Welcome,<%= @user.username %>'s Workouts List</h1>

<% if @user.workouts.empty? %>
   <div class="text-center"><p>Your workout list is empty </p>
   <p><a class="btn btn-success" style="margin: 20px" href="/workouts/new" role="button">Add a New Workout</a>
<% else %>

<div class="text-center">
   <a class="btn btn-success" style="margin: 20px" href="/workouts/new" role="button">+ Add New</a>
</div>
<% end %>
<div class="row">
  <% @user.workouts.each do |workout| %>
     <div class="card" style="width: 15rem; margin: 20px">
      <div class="text-center">
       <div class="card-header"><a href='/workouts/<%= workout.id %>'><%= workout.title %></a></div>
     </div>
</div>
  <% end %>
</div>